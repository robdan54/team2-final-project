    "POST api/:donator_id/donations": "In code review",

    "DELETE api/donations/:donation_id": {
        "description": "deletes the specified donation_id from the donator_items table",
        "example Request": "DELETE api/donations/1",
        "example Response": "Status code 204, no response"
    },

    "PATCH api/:donor_id/donations": {
        "description": "Adds the quantity required provided in the body to the quantity_available stored in the donator_items table - returns the updated record",
        "Important Notes": "When adjusting down figures, remember to submit a negative number in the patch request body. Also, endpoint currently uses donor_id, this will be refactored to donator_id (29/03)",
        "Original Record" : {
            "donation_id": 1,
            "donator_id": 1,
            "category_name": "food",
            "item_id": 2,
            "quantity_required": 20,
            "created_at": "2022-03-29 23:06:32.165886"
        },
        "example Request Body": {
            "donation_id": "1",
            "quantity_available": "5"
        },
        "example Response": {
            "donatorDonationsObject": {
                "donation_id": 1,
                "donator_id": 1,
                "category_name": "foodd",
                "item_id": 2,
                "quantity_available": 25,
                "created_at": "2022-03-29 23:06:32.165886"
            }
        }
